@model OrderDetailsViewModel

<h1>Chi tiết đơn hàng số @Model.Order.Id</h1>

<dl class="row">
    <!-- Hiển thị thông tin chi tiết đơn hàng -->
    <dt class="col-sm-2">Ngày đặt hàng</dt>
    <dd class="col-sm-10">@Model.Order.OrderDate</dd>

    <!-- Các trường thông tin đơn hàng khác -->
    <!-- ... -->
</dl>

<h2>Chi tiết sản phẩm trong đơn hàng</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.OrderDetails)
        {
            <tr>
                <td>@detail.Quantity.ToString()</td>
                <td>@detail.Price</td>
            </tr>
        }
    </tbody>
</table>

<!-- Add a back button to navigate back to the user details -->
<a asp-action="Details" asp-route-id="@Model.Order.CustomerId">Quay lại chi tiết khách hàng</a>
