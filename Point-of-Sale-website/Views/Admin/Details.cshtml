@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/admin.cshtml";

}

@model User

<h1>Chi tiết nhân viên</h1>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Tên đăng nhập</dt>
    <dd class="col-sm-10">@Model.Username</dd>

    <dt class="col-sm-2">Tên đầy đủ</dt>
    <dd class="col-sm-10">@Model.FullName</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Điện thoại</dt>
    <dd class="col-sm-10">@Model.Phone</dd>

    <dt class="col-sm-2">Giới tính</dt>
    <dd class="col-sm-10">@Model.Gender</dd>


</dl>

<!-- Add a back button to navigate back to the list -->
<a asp-action="Index">Quay lại danh sách</a>
